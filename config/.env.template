# AI Humanizer System - Environment Variables Template
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!

# ============================================================
# Claude Code Configuration
# ============================================================
# Claude Code is already authenticated via the CLI
# No API key needed for primary humanization functionality

# ============================================================
# Optional: External API Keys (for calibration/validation)
# ============================================================

# Originality.ai API Key (optional, for detection calibration)
# Get your key at: https://originality.ai/api-access
ORIGINALITY_API_KEY=your_originality_api_key_here

# ============================================================
# Development Settings
# ============================================================

# Environment: development, staging, production
ENVIRONMENT=development

# Debug mode (enables verbose logging)
DEBUG=false

# ============================================================
# ML Model Cache (optional)
# ============================================================

# Directory for caching downloaded models
# Leave empty to use default (~/.cache/huggingface/)
HF_HOME=

# Torch cache directory
TORCH_HOME=

# ============================================================
# Performance Tuning (optional)
# ============================================================

# Number of CPU threads for parallel processing
# Leave empty to use all available cores
OMP_NUM_THREADS=

# GPU device ID (if multiple GPUs available)
CUDA_VISIBLE_DEVICES=0

# ============================================================
# Logging (optional overrides for config.yaml)
# ============================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log format: json, text
LOG_FORMAT=json

# ============================================================
# Future Integrations (placeholder)
# ============================================================

# OpenAI API Key (not currently used)
OPENAI_API_KEY=

# Anthropic API Key (not currently used, Claude Code handles auth)
ANTHROPIC_API_KEY=

# ============================================================
# Notes
# ============================================================
# - All API keys are OPTIONAL for core functionality
# - The system works fully with Claude Code's built-in capabilities
# - External APIs are only for validation/calibration purposes
# - Keep your .env file secure and never commit it to git
