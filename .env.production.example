# BMAD Academic Humanizer - Production Environment Variables
# Copy this file to .env.production and fill in the values

# Application Settings
APP_ENV=production
APP_DEBUG=false
APP_HOST=0.0.0.0
APP_PORT=8000

# LLM API Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo
OPENAI_BASE_URL=https://api.openai.com/v1

# Alternative LLM Providers (if needed)
# ANTHROPIC_API_KEY=your-anthropic-key
# COHERE_API_KEY=your-cohere-key

# Authentication
JWT_SECRET_KEY=your-super-secret-jwt-key-here-change-this
API_KEY_SALT=your-api-key-salt-here

# Redis Cache Configuration
REDIS_ENABLED=true
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=your-redis-password-here
REDIS_SSL=true
REDIS_MAX_CONNECTIONS=50

# Database Configuration (if using database)
DATABASE_ENABLED=false
DATABASE_TYPE=postgresql
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_NAME=bmad_production
DATABASE_USER=bmad_user
DATABASE_PASSWORD=your-database-password-here
DATABASE_SSL_MODE=require
DATABASE_POOL_SIZE=20

# Monitoring & Observability
SENTRY_ENABLED=true
SENTRY_DSN=https://your-sentry-dsn-here@sentry.io/project-id
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# Jaeger Tracing
JAEGER_ENABLED=true
JAEGER_AGENT_HOST=jaeger
JAEGER_AGENT_PORT=6831
JAEGER_SAMPLING_RATE=0.1

# Prometheus Metrics
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Security
HTTPS_ENABLED=true
SSL_CERT_FILE=/etc/ssl/certs/bmad.crt
SSL_KEY_FILE=/etc/ssl/private/bmad.key

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# CORS Configuration
CORS_ALLOW_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
CORS_ALLOW_CREDENTIALS=true

# Backup Configuration (if using backups)
BACKUP_ENABLED=false
BACKUP_TYPE=s3
BACKUP_BUCKET=bmad-backups
BACKUP_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Performance Configuration
CACHE_ENABLED=true
CACHE_TTL_SECONDS=3600
PARALLEL_PROCESSING_ENABLED=true
PARALLEL_MAX_WORKERS=4
STREAMING_ENABLED=true
STREAMING_CHUNK_SIZE=5000

# Feature Flags
FEATURE_PARAPHRASING=true
FEATURE_AI_DETECTION=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_BATCH_PROCESSING=true

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="System under maintenance. Please try again later."

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/var/log/bmad/app.log
LOG_MAX_SIZE_MB=100
LOG_BACKUP_COUNT=10

# Worker Configuration
WORKER_COUNT=4
WORKER_CLASS=uvicorn.workers.UvicornWorker
WORKER_TIMEOUT=300

# Auto-scaling Configuration
AUTOSCALING_ENABLED=true
AUTOSCALING_MIN_REPLICAS=2
AUTOSCALING_MAX_REPLICAS=10
AUTOSCALING_TARGET_CPU_PERCENT=70
AUTOSCALING_TARGET_MEMORY_PERCENT=80

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
READINESS_DELAY=10
GRACEFUL_SHUTDOWN_TIMEOUT=30

# Circuit Breaker Configuration
CIRCUIT_BREAKER_ENABLED=true
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=60

# Tool-Specific Configuration
FINGERPRINT_REMOVER_MAX_LENGTH=100000
BURSTINESS_TARGET=0.6
IMPERFECTION_LEVEL=subtle
DETECTOR_TIMEOUT=30
VALIDATOR_MIN_SCORE=7.0
PERPLEXITY_MODEL=gpt2

# External Services (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your-webhook-url
PAGERDUTY_API_KEY=your-pagerduty-api-key

# Timezone
TZ=UTC
